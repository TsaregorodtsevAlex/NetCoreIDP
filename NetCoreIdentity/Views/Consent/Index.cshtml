@using NetCoreIdentity.Controllers.Consent
@model NetCoreIdentity.Controllers.Consent.ConsentViewModel

<div class="page-consent">
    <div class="row page-header">
        <div class="col-sm-10">
            @*@if (Model.ClientLogoUrl != null)
            {
                <div class="client-logo"><img src="@Model.ClientLogoUrl"></div>
            }*@
            @*<h1 class="ui-font-family ui-colored-font-color access-settings-icon">
                @Model.ClientName
            </h1>*@
        </div>
    </div>

    <div class="row">
        <div class="col-sm-8">
            @Html.Partial("_ValidationSummary")

            <form asp-action="Index" class="consent-form">
                <input type="hidden" asp-for="ReturnUrl" />

                <div class="ui-font-family ui-font-size-1-4">Предоставить системе тестирования следующие данные:</div>
                
                <div style="position: fixed; top:-99999px !important; left: -99999px;">
                    @if (Model.IdentityScopes.Any())
                    {
                        <div class="panel panel-default consent-buttons">
                            <div class="panel-heading ui-colored-font-color ui-font-size-1-4 ui-font-family">
                                <span class="personal-info-icon">Персональная информация</span>
                            </div>
                            <ul class="list-group">
                                @foreach (var scope in Model.IdentityScopes)
                                {
                                    @Html.Partial("_ScopeListItem", scope)
                                }
                            </ul>
                        </div>
                    }
                </div>

                @if (Model.ResourceScopes.Any())
                {
                    <div class="panel panel-default consent-buttons">
                        <div class="panel-heading ui-colored-font-color ui-font-size-1-4 ui-font-family">
                        <h1 class="ui-font-family ui-colored-font-color access-settings-icon">Доступ к приложеням</h1>
                        </div>
                        <ul class="list-group">
                            @foreach (var scope in Model.ResourceScopes)
                            {
                                @Html.Partial("_ScopeListItem", scope)
                            }
                        </ul>
                    </div>
                }

                @*@if (Model.AllowRememberConsent)
                {
                    <div class="consent-remember" style="display: none">
                        <label>
                            <input class="consent-scopecheck" asp-for="RememberConsent" />
                            <strong>Remember My Decision</strong>
                        </label>
                    </div>
                }*@

                <div class="consent-buttons">
                    <button name="button" value="yes" class="btn btn-primary ui-button-color ui-button-middle ui-font-family" autofocus>Подтвердить</button>
                    @*<button name="button" value="no" class="btn">No, Do Not Allow</button>*@
                    @if (Model.ClientUrl != null)
                    {
                        <a class="pull-right btn btn-default" target="_blank" href="@Model.ClientUrl">
                            <span class="glyphicon glyphicon-info-sign"></span>
                            <strong>@Model.ClientName</strong>
                        </a>
                    }
                </div>
            </form>
        </div>
    </div>
</div>